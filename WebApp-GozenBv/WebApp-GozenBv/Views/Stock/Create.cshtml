@model WebApp_GozenBv.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinQuantity" class="control-label"></label>
                <input asp-for="MinQuantity" class="form-control" />
                <span asp-validation-for="MinQuantity" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column">
                <div>
                    <label class="form-check-label">@Html.DisplayNameFor(model => model.Used)</label>
                </div>
                <div>
                    <input class="form-check-input" asp-for="Used" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div id="ProductBrandSelect" class="form-group">
                <label asp-for="ProductBrand" class="control-label"></label>
                <input id="selectProductBrand" asp-for="ProductBrand" class="form-control" list="lstProductBrands" />
                <span asp-validation-for="ProductBrand" class="text-danger"></span>
                <datalist id="lstProductBrands">
                    @foreach (var brand in ViewBag.ProductBrands)
                    {
                        <option value="@brand"></option>
                    }
                </datalist>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@*<script src="~/js/Stock_Create.js"></script>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
