<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Datum</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ophalen/Terugbrengen</label>
                <select asp-for="Action" asp-items="ViewBag.actions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Werknemer</label>
                <select class="form-control" asp-for="EmployeeId" asp-items="ViewBag.employees"></select>
            </div>

                @*<div class="list-group">
                    @foreach (var product in ViewBag.stock)
                    {
