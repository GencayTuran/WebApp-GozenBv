        <div class="d-flex flex-row justify-content-end bg-secondary">
            <div class="col-10">Materiaal</div>
            <div class="col-2">Aantal</div>
        </div>
        <div>
            <div class="form-group d-flex justify-content-between">
                <select class="col-8 form-control selectpicker" id="selectProduct" data-live-search="true">
                    <option id="option" disabled selected>Selecteer producten</option>
                    @foreach (var product in ViewBag.stock)
                    {
                        <option id="optionProduct" value="@product.Value">@product.Text</option>
                    }
                </select>
                <input class="col-2" id="inputQuantity" placeholder="Aantal" value="1"/>
