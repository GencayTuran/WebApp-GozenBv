@model List<WebApp_GozenBv.ViewModels.UserLogViewModel>

<div id="accordion" class="d-flex justify-content-center">
    <div class="col-md-9">

        <div class="card">
            <div class="card-header" id="headingOne">
                <h4 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        User logs
                    </button>
                </h4>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                        <ul class="list-group">
                            @foreach (var log in Model)
                            {
                                <li class="list-group-item">
                                    <a asp-controller="@log.Controller" asp-action="Details" asp-route-id="@log.EntityId">
                                        <div class="flex-row d-flex">
                                            <div class="col-3"><p>@log.UserName</p></div>
                                            <div class="col-4"><p><em>@log.Action</em></p></div>
                                            <div class="col-2"><p><b>@log.Controller</b></p></div>
                                            <div class="col-4"><p>at @log.LogDate</p></div>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                </div>
            </div>
        </div>
    </div>
</div>