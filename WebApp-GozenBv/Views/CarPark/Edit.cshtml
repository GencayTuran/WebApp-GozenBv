@model WebApp_GozenBv.ViewModels.CarDetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarPark</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Car.Id" />
            <div class="form-group">
                <label asp-for="@Model.Car.LicencePlate" class="control-label"></label>
                <input asp-for="@Model.Car.LicencePlate" class="form-control" />
                <span asp-validation-for="@Model.Car.LicencePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.ChassisNumber" class="control-label"></label>
                <input asp-for="@Model.Car.ChassisNumber" class="form-control" />
                <span asp-validation-for="@Model.Car.ChassisNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.Brand" class="control-label"></label>
                <input asp-for="@Model.Car.Brand" class="form-control" />
                <span asp-validation-for="@Model.Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.Model" class="control-label"></label>
                <input asp-for="@Model.Car.Model" class="form-control" />
                <span asp-validation-for="@Model.Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.Km" class="control-label"></label>
                <input asp-for="@Model.Car.Km" class="form-control" />
                <span asp-validation-for="@Model.Car.Km" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.KeuringDate" class="control-label"></label>
                <input id="inputKeuringDate" asp-for="@Model.Car.KeuringDate" class="form-control" />
                <span asp-validation-for="@Model.Car.KeuringDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.DeadlineKeuringDate" class="control-label"></label>
                <input id="inputDeadlineKeuring" asp-for="@Model.Car.DeadlineKeuringDate" class="form-control" />
                <span asp-validation-for="@Model.Car.DeadlineKeuringDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Car.DriverName" class="control-label"></label>
                <input asp-for="@Model.Car.DriverName" class="form-control" />
                <span asp-validation-for="@Model.Car.DriverName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

            <div class="form-group">

                <h5>Maintenances</h5>
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    Maintenance
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th>
                                    <label asp-for="@Model.CarMaintenance.Id"></label>
                                </th>
                                <th>
                                    <label asp-for="@Model.CarMaintenance.MaintenanceInfo"></label>
                                </th>
                                <th>
                                    <label asp-for="@Model.CarMaintenance.MaintenanceDate"></label>
                                </th>
                                <th>
                                    <label asp-for="@Model.CarMaintenance.MaintenanceKm"></label>
                                </th>
                            </tr>

                            @for (int i = 0; i < Model.CarMaintenances.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <label>@Model.CarMaintenances[i].Id</label>
                                    </td>
                                    <td>
                                        <input asp-for="@Model.CarMaintenances[i].MaintenanceInfo" class="form-control"/>
                                        <span asp-validation-for="@Model.CarMaintenances[i].MaintenanceInfo" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="@Model.CarMaintenances[i].MaintenanceDate" class="form-control" />
                                        <span asp-validation-for="@Model.CarMaintenances[i].MaintenanceDate" class="text-danger"></span>
                                    </td>
                                    <td>
                                        <input asp-for="@Model.CarMaintenances[i].MaintenanceKm" class="form-control" />
                                        <span asp-validation-for="@Model.CarMaintenances[i].MaintenanceKm" class="text-danger"></span>
                                    </td>
                                </tr>
                            }
                    </tbody>
                    </table>
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="/js/CarPark_KeuringDates.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
