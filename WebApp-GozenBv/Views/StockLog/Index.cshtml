@using WebApp_GozenBv.Constants;
@model IEnumerable<WebApp_GozenBv.Models.StockLog>

@{
    ViewData["Title"] = "Index";
}

<style>
    #trStockLog:hover {
        cursor: pointer;
        background: rgba(100,100,100,0.1);
    }
</style>

<h1>All logs</h1>

<p>
    <a asp-action="Create">Create New Log</a>
</p>

<form asp-action="Index" method="get">
    <p>
        Find by name: <input type="text" name="searchString" value="@ViewBag.SearchString"/>
        <input type="submit" value="Search" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.Employee), "Index", new { sortOrder = ViewBag.EmployeeSortParm })
            </th>
            <th>
                @Html.ActionLink(Html.DisplayNameFor(model => model.StockLogDate), "Index", new { sortOrder = ViewBag.DateSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="trStockLog" onclick="ToDetails(@item.Id)">
                <td>
                    <vc:status-icon status="item.Status" is-damaged="item.Damaged"></vc:status-icon>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                    @Html.DisplayFor(modelItem => item.Employee.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StockLogDate)
                </td>
                <a hidden id="anchor_@item.Id" asp-action="Details" asp-route-id="@item.LogCode"></a>
            </tr>
        }
    </tbody>
</table>

<div>
    <vc:user-log view="@ViewTypeConst.Controller" controller="@ControllerConst.StockLog" entity-id=""></vc:user-log>
</div>

<script src="~/js/StockLog_Index.js"></script>
