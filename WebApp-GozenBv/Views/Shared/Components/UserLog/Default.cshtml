@model List<WebApp_GozenBv.ViewModels.UserLogViewModel>

<div id="accordionUserLog" class="d-flex justify-content-center">
    <div class="col-md-9">

        <div class="card">
            <div class="card-header" id="headingOne">
                <button class="btn btn-link w-100 d-flex justify-content-sm-center justify-content-md-start" 
                data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <h4 class="mb-0">
                        User logs
                    </h4>
                </button>
            </div>

            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionUserLog">
                <div class="card-body">
                    @if (Model.Count != 0)
                    {
                        <ul class="list-group">
                            @foreach (var log in Model)
                            {
                                <li class="list-group-item">
                                    <a asp-controller="@log.Controller" asp-action="Details" asp-route-id="@log.EntityId">
                                        <div class="flex-row d-flex">
                                            <div class="col-3"><p>@log.UserName</p></div>
                                            <div class="col-4"><p><em>@log.Action</em></p></div>
                                            <div class="col-2"><p><b>@log.Controller</b></p></div>
                                            <div class="col-4"><p>at @log.LogDate</p></div>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p><em>No logs here</em></p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>