@model WebApp_GozenBv.ViewModels.LogCreatedEditViewModel

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LogId" />

    <h5>MaterialLog</h5>
    <hr />
    <div>
        <div class="form-row">
            <div class="form-group m-2">
                <label asp-for="LogDate" class="control-label"></label>
                <input asp-for="LogDate" class="form-control" />
                <span asp-validation-for="LogDate" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label class="control-label">Employee</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.Employees"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

        </div>
    </div>
    <hr />

    <h5>Items</h5>
    <hr />
    <div>
        <div>
            <div class="flex-column d-flex">
                <div class="flex-row d-flex mb-2">
                    <div class="col-md-3">Material</div>
                    <div class="col-md-3">MaterialAmount</div>
                    <div class="col-md-3">Used?</div>
                </div>

                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    <div class="flex-row d-flex">
                        <div class="col-md-3 form-group">
                            <select asp-for="Items[i].MaterialId" asp-items="ViewBag.Materials" class="form-control"></select>
                            <span asp-validation-for="Items[i].MaterialId" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-group">
                            <input asp-for="Items[i].MaterialAmount" class="form-control" />
                            <span asp-validation-for="Items[i].MaterialAmount" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="Items[i].Used" class="form-control" />
                        </div>
                    </div>
                }
            </div>
            @*add or remove rows here*@
        </div>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
