@using WebApp_GozenBv.Constants;
@model WebApp_GozenBv.ViewModels.RepairTicketCardViewModel

<i class="@GetStatusIconClass(Model.Status)"></i>
@if (Model.HasInfo)
{
    <i class="fa fa-info-circle"></i>
}

@functions {
    string GetStatusIconClass(int status)
    {
        switch (status)
        {
            case RepairTicketStatus.AwaitingAction:
                return "fa fa-clock"; // Clock icon for Awaiting Action
            case RepairTicketStatus.Repaired:
                return "fa fa-check-circle"; // Check circle icon for Repaired
            case RepairTicketStatus.Removed:
                return "fa fa-times-circle"; // Times circle icon for Removed
            default:
                return "fa fa-question-circle"; // Question circle icon for unknown status
        }
    }
}