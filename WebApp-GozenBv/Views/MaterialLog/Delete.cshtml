@model WebApp_GozenBv.ViewModels.MaterialLogDetailVM

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MaterialLog</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.MaterialLogDate)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.MaterialLog.Employee)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.LogCode)</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.MaterialLogDate)</td>
                <td>@Html.DisplayFor(model => model.EmployeeFullName)</td>
                <td>@Html.DisplayFor(model => model.LogCode)</td>
            </tr>
        </tbody>
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.MaterialLogItems)</th>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialId)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialAmount)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MaterialLogItems)
            {
                <tr>
                    <td>@item.MaterialId</td>
                    <td>@item.ProductNameCode</td>
                    <td>@item.MaterialAmount</td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="Delete">
        @*<input type="hidden" asp-for="LogCode" />*@
        <input type="submit" asp-route-id="@Model.LogCode" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
