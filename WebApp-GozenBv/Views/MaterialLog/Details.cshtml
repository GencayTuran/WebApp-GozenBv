@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<h4>MaterialLog</h4>
<hr />

<div class="d-flex flex-column">
    <a asp-action="Index">Back to List</a>

    @switch (Model.Status)
    {
        case MaterialLogStatusConst.Created:
            <a asp-action="Edit" asp-route-id="@Model.MaterialLogId">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.LogCode">Delete</a>
            <a asp-action="ReturnItems" asp-route-id="@Model.LogCode">Return Items</a>
            break;

        case MaterialLogStatusConst.DamagedAwaitingAction:
            <a asp-action="Undo" asp-route-id="@Model.LogCode">Undo</a>
            <a asp-action="CompleteDamaged" asp-route-id="@Model.LogCode">Complete Damaged</a>
            break;

        case MaterialLogStatusConst.Returned:
            <a asp-action="Undo" asp-route-id="@Model.LogCode">Undo</a>
            break;
    }
</div>

