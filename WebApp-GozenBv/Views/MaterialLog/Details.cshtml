<table class="table">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.MaterialLogDate)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.MaterialLog.Employee)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Status)</th>
            @if (Model.Status == MaterialLogStatusConst.Returned || Model.Status == MaterialLogStatusConst.DamagedAwaitingAction)
            {
                <th scope="col">@Html.DisplayNameFor(model => model.ReturnDate)</th>
            }
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayFor(model => model.MaterialLogDate)</td>
            <td>@Html.DisplayFor(model => model.EmployeeFullName)</td>
            <td>
                <vc:status-icon status="@Model.Status" is-damaged="@Model.IsDamaged"></vc:status-icon>
            </td>
            @if (Model.Status == MaterialLogStatusConst.Returned || Model.Status == MaterialLogStatusConst.DamagedAwaitingAction)
            {
                <td>@Html.DisplayFor(model => model.ReturnDate)</td>
            }
        </tr>
    </tbody>
</table>

<div>
    <h5>Items</h5>
</div>
<table class="table" id="notDamagedItems">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialId)</th>
            <th>@Html.DisplayNameFor(model => model.MaterialLogItem)</th>
            <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialAmount)</th>
            <th>@Html.DisplayNameFor(model => model.MaterialLogItem.Used)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MaterialLogItems)
        {
            <tr>
                <td>@item.MaterialId</td>
                <td>@item.ProductNameCode</td>
                <td>@item.MaterialAmount</td>
                <td>@item.Used</td>
            </tr>
        }
    </tbody>
</table>

@if (Model.IsDamaged)
{
    <div>
        <h5>Damaged Items</h5>
    </div>
    <table class="table" id="damagedItems">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialId)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.MaterialAmount)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.Cost)</th>
                <th>@Html.DisplayNameFor(model => model.MaterialLogItem.Used)</th>
                @if (Model.Status == MaterialLogStatusConst.DamagedAwaitingAction)
                {
                    <th>@Html.DisplayNameFor(model => model.MaterialLogItem.DamagedAmount)</th>
                }
                @if (Model.Status == MaterialLogStatusConst.Returned)
                {
                    <th>@Html.DisplayNameFor(model => model.MaterialLogItem.DamagedAmount)</th>
                    <th>@Html.DisplayNameFor(model => model.MaterialLogItem.RepairedAmount)</th>
                    <th>@Html.DisplayNameFor(model => model.MaterialLogItem.DeletedAmount)</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MaterialLogItemsDamaged)
            {
                <tr>
                    <td>@item.MaterialId</td>
                    <td>@item.ProductNameCode</td>
                    <td>@item.MaterialAmount</td>
                    <td>@item.Cost</td>
                    <td>@item.Used</td>
                    @if (Model.Status == MaterialLogStatusConst.DamagedAwaitingAction)
                    {
                        <td>@item.DamagedAmount</td>
                    }
                    @if (Model.Status == MaterialLogStatusConst.Returned)
                    {
                        <td>@item.DamagedAmount</td>
                        <td>@item.RepairedAmount</td>
                        <td>@item.DeletedAmount</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <vc:user-log view="@ViewTypeConst.Entity" controller="@ControllerConst.MaterialLog" entity-id="@Model.LogCode"></vc:user-log>
</div>


<input id="statusId" type="hidden" value="@Model.Status" />
<script src="~/js/MaterialLog_Details.js"></script>
