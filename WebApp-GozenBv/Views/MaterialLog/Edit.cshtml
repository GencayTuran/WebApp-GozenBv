@using WebApp_GozenBv.Constants;
@model WebApp_GozenBv.ViewModels.MaterialLogAndItemsViewModel

@{
    ViewData["Title"] = "Edit";
    var status = Model.MaterialLog.Status;
    var logId = Model.MaterialLog.LogId;
}

<div class="flex-row d-flex justify-content-between">
    <div class="col-md-8">
        <h1 class="mb-0">Edit</h1>
        <h4 class="text-muted">Material Log</h4>
    </div>

    <div class="d-flex flex-column col-2">
        <a asp-action="Details" asp-route-id="@logId" class="btn btn-dark">Back to Details</a>
    </div>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@logId" />

    <div class="d-flex justify-content-end">
        <div class="form-group col-2">
            <input type="submit" value="Save" class="btn btn-primary w-100" />
        </div>
    </div>
    <hr />

    @switch (status)
    {
        case MaterialLogStatusConst.Created:
            <table class="table table-bordered table-striped table-sm col-md-8">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Log Date</th>
                        <th scope="col">Employee</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input asp-for="MaterialLog.LogDate" disabled class="form-control" />
                            <span asp-validation-for="MaterialLog.LogDate" class="text-danger"></span>
                        </td>
                        <td>
                            <select asp-for="MaterialLog.EmployeeId" asp-items="@ViewBag.Employees" class="form-control"></select>
                            <span asp-validation-for="MaterialLog.EmployeeId" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <h5>Items</h5>
            <hr />
            <div>
                <div>
                    <div class="flex-column d-flex">
                        <div class="flex-row d-flex mb-2">
                            <div class="col-md-3">Material</div>
                            <div class="col-md-3">MaterialAmount</div>
                            <div class="col-md-3">Used?</div>
                        </div>

                        @for (int i = 0; i < Model.MaterialLogItems.Count; i++)
                        {
                            <div class="flex-row d-flex">
                                <div class="col-md-3 form-group">
                                    <select asp-for="MaterialLogItems[i].MaterialId" asp-items="ViewBag.Materials" class="form-control"></select>
                                    <span asp-validation-for="MaterialLogItems[i].MaterialId" class="text-danger"></span>
                                </div>
                                <div class="col-md-3 form-group">
                                    <input asp-for="MaterialLogItems[i].MaterialAmount" class="form-control" />
                                    <span asp-validation-for="MaterialLogItems[i].MaterialAmount" class="text-danger"></span>
                                </div>
                                <div class="col-md-3 form-check">
                                    <input class="form-check-input" type="checkbox" asp-for="MaterialLogItems[i].IsUsed" class="form-control" />
                                </div>
                            </div>
                        }
                    </div>
                    @*add or remove rows here*@
                </div>
            </div>
            break;

        case MaterialLogStatusConst.Returned:
            <table class="table table-bordered table-striped table-sm col-md-8">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Log Date</th>
                        <th scope="col">Return Date</th>
                        <th scope="col">Employee</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input asp-for="MaterialLog.LogDate" disabled class="form-control" />
                            <span asp-validation-for="MaterialLog.LogDate" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="MaterialLog.ReturnDate" class="form-control" />
                            <span asp-validation-for="MaterialLog.ReturnDate" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="MaterialLog.EmployeeFullName" disabled class="form-control" />
                            <span asp-validation-for="MaterialLog.EmployeeId" class="text-danger"></span>
                        </td>
                    </tr>
                </tbody>
            </table>

            <h5>Items</h5>
            <hr />
            <div>
                <div>
                    <div class="flex-column d-flex">
                        <div class="flex-row d-flex mb-2">
                            <div class="col-md-3">Material</div>
                            <div class="col-md-2">MaterialAmount</div>
                            <div class="col-md-1 d-flex justify-content-center">Used?</div>
                            <div class="col-md-1 d-flex justify-content-center">Damaged?</div>
                            <div class="col-md-2">DamagedAmount</div>
                            <div class="col-md-2">RepairAmount</div>
                            <div class="col-md-2">DeleteAmount</div>
                        </div>

                        @for (int i = 0; i < Model.MaterialLogItems.Count; i++)
                        {
                            <div class="flex-row d-flex">
                                <div class="col-md-3 form-group">
                                    <input asp-for="MaterialLogItems[i].ProductNameCode" disabled class="form-control" />
                                </div>
                                <div class="col-md-2 form-group">
                                    <input asp-for="MaterialLogItems[i].MaterialAmount" disabled class="form-control col-md-6" />
                                    <span asp-validation-for="MaterialLogItems[i].MaterialAmount" class="text-danger"></span>
                                </div>
                                <div class="col-md-1 form-check d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox" disabled asp-for="MaterialLogItems[i].IsUsed" class="form-control" />
                                </div>
                                <div class="col-md-1 form-check d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox" asp-for="MaterialLogItems[i].IsDamaged" class="form-control" data-row-index="@i" />
                                </div>
                                <div class="col-md-2 form-group">
                                    <input asp-for="MaterialLogItems[i].DamagedAmount" class="form-control col-md-6" />
                                    <span asp-validation-for="MaterialLogItems[i].DamagedAmount" class="text-danger"></span>
                                </div>
                                <div class="col-md-2 form-group">
                                    <input asp-for="MaterialLogItems[i].RepairAmount" class="form-control col-md-6" />
                                    <span asp-validation-for="MaterialLogItems[i].RepairAmount" class="text-danger"></span>
                                </div>
                                <div class="col-md-2 form-group">
                                    <input asp-for="MaterialLogItems[i].DeleteAmount" class="form-control col-md-6" />
                                    <span asp-validation-for="MaterialLogItems[i].DeleteAmount" class="text-danger"></span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            break;
    }
</form>

<script src="~/js/MaterialLog_Edit.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
