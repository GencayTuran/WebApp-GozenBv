@using WebApp_GozenBv.Constants;
@model WebApp_GozenBv.ViewModels.MaterialLogAndItemsViewModel

@{
    ViewData["Title"] = "Edit";
    var status = Model.MaterialLog.Status;
    var logId = Model.MaterialLog.LogId;
}

<div class="flex-row d-flex justify-content-between">
    <div class="col-md-8">
        <h1 class="mb-0">Edit</h1>
        <h4 class="text-muted">Material Log</h4>
    </div>

    <div class="d-flex flex-column col-2">
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </div>
</div>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="@logId" />

    <div class="d-flex justify-content-end">
        <div class="form-group col-2">
            <input type="submit" value="Save" class="btn btn-primary w-100" />
        </div>
    </div>
    <hr />

    @switch (status)
    {
        case MaterialLogStatusConst.Created:
            <vc:log-created-edit log="@Model.MaterialLog" items="@Model.MaterialLogItems"></vc:log-created-edit>
            break;
        case MaterialLogStatusConst.Returned:
            <vc:log-returned-edit log="@Model.MaterialLog" items="@Model.MaterialLogItems"></vc:log-returned-edit>
            break;
    }
</form>

<script src="~/js/MaterialLog_Edit.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
